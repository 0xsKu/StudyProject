<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.hotbitmapgg.studyproject"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".hcc.base.StudyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_photo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".hcc.ui.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".hcc.ui.activity.TestActivity"/>
        <activity android:name=".hcc.ui.activity.RxTestActivity"/>
        <activity android:name=".hcc.recycleview.RecycleViewDemoActivity"/>
        <activity android:name=".hcc.rxdemo.RxJavaSampleActivity"/>


    </application>

</manifest>